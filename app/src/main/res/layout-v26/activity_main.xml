<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.text.TextUtils"/>
        <import type="java.util.stream.Collectors"/>
        <variable
                name="viewModel"
                type="com.example.yosuke.calculator.viewmodel.CalcViewModel"/>
    </data>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.MainActivity"
            android:background="#F0F0F0">

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:id="@+id/calculating_elapsed"
                android:setFont="@{`Roboto/Roboto-Light.ttf`}"
                android:textSize="30sp"
                android:textColor="@color/history_text"
                android:autoSizeTextType="uniform"
                android:showCalcList="@{viewModel.calcProgress}"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="115dp"
                app:layout_constraintBottom_toTopOf="@+id/result"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintVertical_bias="1.0"
                android:layout_marginEnd="13dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="13dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0" android:gravity="right"/>

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="82dp"
                android:text="@{viewModel.number ?? @string/zero}"
                android:setFont="@{`Roboto/Roboto-Regular.ttf`}"
                android:textColor="@color/input_text"
                android:id="@+id/result"
                android:textSize="68sp"
                android:autoSizeTextType="uniform"
                app:layout_constraintTop_toBottomOf="@+id/calculating_elapsed" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="12dp" app:layout_constraintBottom_toTopOf="@+id/button_area"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="13dp"
                app:layout_constraintHorizontal_bias="1.0" android:gravity="right"/>

        <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/button_area"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result" app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>